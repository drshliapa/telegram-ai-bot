# ========================================
# TELEGRAM API CONFIGURATION
# ========================================
# Get your API credentials from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Session string (auto-generated on first login, leave empty for new setup)
SESSION_STRING=

# Bot owner user ID (your Telegram user ID)
# You can get it from @userinfobot on Telegram
BOT_OWNER_ID=your_user_id_here

# ========================================
# LLM CONFIGURATION
# ========================================
# Enable/disable AI responses
LLM_ENABLED=true

# LLM Provider: 'ollama' or 'openrouter'
LLM_PROVIDER=openrouter

# Temperature (0.0-1.0): lower = more focused, higher = more creative
LLM_TEMPERATURE=0.7

# Max tokens in response
LLM_MAX_TOKENS=500

# Trigger words (comma-separated, lowercase)
# Bot will respond to messages containing these words
# NOTE: "шляпа" and all its case forms (шляпі, шляпу, etc.) are handled by built-in regex
# You can add additional triggers like: ai,bot,help,assistant
LLM_TRIGGER_WORDS=ai,bot,help

# Allow "шляпа" trigger in groups (true/false)
LLM_SHLYAPA_IN_GROUPS=true

# Allowed chat IDs (comma-separated, empty = all private chats)
# Use internal IDs without -100 prefix
LLM_ALLOWED_CHATS=

# ========================================
# ADVANCED CONFIGURATION (Optional)
# ========================================

# --- Telegram Connection ---
# Number of connection retry attempts
TELEGRAM_CONNECTION_RETRIES=5

# --- Rate Limiting ---
# Time window for rate limiting (milliseconds, default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000
# Maximum requests per user per window (default: 10)
RATE_LIMIT_MAX=10

# --- Conversation History ---
# Number of messages to remember per conversation (default: 30)
HISTORY_MAX_MESSAGES=30
# How long to keep history (milliseconds, default: 3600000 = 1 hour)
HISTORY_TTL=3600000

# --- Message Constraints ---
# Maximum message length to process (default: 8000 characters)
MAX_MESSAGE_LENGTH=8000

# --- Timeouts ---
# LLM API request timeout (milliseconds, default: 30000 = 30 seconds)
LLM_TIMEOUT=30000

# --- FloodWait Handling ---
# Maximum retries for FloodWaitError (default: 2)
FLOOD_WAIT_MAX_RETRIES=2
# Maximum seconds to wait for FloodWait (default: 300 = 5 minutes)
FLOOD_WAIT_MAX_SECONDS=300

# --- Other ---
# Send test message on startup (true/false)
TEST_MESSAGE_ENABLED=false

# ========================================
# OLLAMA CONFIGURATION (if LLM_PROVIDER=ollama)
# ========================================
# Ollama host URL (default: http://localhost:11434)
OLLAMA_HOST=http://localhost:11434

# Ollama model name (e.g., llama2, llama3.2:1b, mistral, etc.)
# List available models with: ollama list
OLLAMA_MODEL=llama3.2:1b

# ========================================
# OPENROUTER CONFIGURATION (if LLM_PROVIDER=openrouter)
# ========================================
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter base URL (usually no need to change)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# OpenRouter model (see available models at https://openrouter.ai/models)
# Recommended models:
#   google/gemini-2.0-flash-exp:free - Fast, free (recommended for testing)
#   google/gemini-flash-1.5 - Stable, paid
#   anthropic/claude-3.5-sonnet - Advanced, paid
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free

# Your app name/referer (for OpenRouter analytics)
OPENROUTER_REFERER=telegram-ai-bot
OPENROUTER_TITLE=telegram-ai-bot
